resources: 
  - ../robots
  - ../worlds
  - ../objects

worlds:
  world:
    real_time_factor: 1

simulations:
  table_with_bowling_simulation:
    simulator: mujoco
    headless: False
    world:
      name: world
      path: table_with_bowling/table_with_bowling.xml

  bowling_simulation:
    simulator: mujoco
    headless: False
    world:
      name: world
      path: table_with_bowling/bowling.xml

  table_simulation:
    simulator: mujoco
    headless: False
    world:
      name: world
      path: table_with_bowling/table.xml

  cube_simulation:
    simulator: mujoco
    headless: False
    world:
      name: world
      path: table_with_bowling/cube.xml

multiverse_server:
  host: "tcp://127.0.0.1"
  port: 7000

multiverse_clients:
  table_with_bowling_simulation:
    port: 7501
    send:
      bowling: ["force", "torque"]
      table: ["force", "torque"]
    receive:
      bowling: ["position", "quaternion", "linear_velocity", "angular_velocity"]
      table: ["position", "quaternion", "linear_velocity", "angular_velocity"]
      cube: ["position", "quaternion", "linear_velocity", "angular_velocity"]

  bowling_simulation:
    port: 7502
    send:
      bowling: ["position", "quaternion", "linear_velocity", "angular_velocity"]
    receive:
      bowling: ["force", "torque"]

  table_simulation:
    port: 7503
    send:
      table: ["position", "quaternion", "linear_velocity", "angular_velocity"]
    receive:
      table: ["force", "torque"]

  cube_simulation:
    port: 7504
    send:
      cube: ["position", "quaternion", "linear_velocity", "angular_velocity"]